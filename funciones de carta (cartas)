        std::vector<NodoCarta*> nodosMano; // Almacenar los nodos 
        while (temp != nullptr) {
            std::cout << "[" << indice << "] ";
            imprimirCarta(temp->data);
            nodosMano.push_back(temp);
            if (temp->siguiente != nullptr) {
                std::cout << ", ";
            }
            temp = temp->siguiente;
            indice++;
        }
        std::cout << std::endl;

